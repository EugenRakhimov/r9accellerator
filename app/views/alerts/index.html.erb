<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <p id="notice"><%= notice %></p>
            <h1 class="page-header">Current alerts
                <small>Subheading</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Full Width Page</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead>
              <tr>
                <th>Watch param</th>
                <th>Condition</th>
                <th>Comparer</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @alerts.each do |alert| %>
                <tr>
                  <td><%= watch_param alert.watch_param %></td>
                  <td><%= condition alert.condition %></td>
                  <td><%= alert.comparer %></td>
                  <td><%= link_to 'Show', alert %></td>
                  <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
                  <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Alert', new_alert_path %>

        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

