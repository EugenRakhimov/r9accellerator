<%= simple_form_for(@shipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :custom_number %>
    <%= f.input :gst %>
    <%= f.input :payment_date %>
    <%= f.input :status %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
